<div class="container">
	<h2 class="heading">Eat-Da-Burger!</h2>

	<div class="burger-div">
		<ul id="burgers-to-devour">
			<h3>Burgers to Devour:</h3>
			{{#each burgers}}
			{{#unless devoured}}
			<form action="/api/burgers/{{id}}" method="POST">
				<input type="hidden" value="true" name="devoured" />
				<p>{{id}} {{burger_name}} <button class="devour">Devour It!</button></p>

			</form>

			{{/unless}}
			{{/each}}
		</ul>
		<div>

			<div class="burger-div">
				<ul id="burgers-devoured">
					<h3>Devoured Burgers:</h3>
					{{#each burgers}}
					{{#if devoured}}

					<p>{{id}} {{burger_name}}</p>

					{{/if}}
					{{/each}}
				</ul>
			</div>

			<form action="/api/burgers" method="POST">
				<textarea type="text" name="burger" id="burger-input"></textarea>
				<p>Add a yummy burger. Then click "Devour It" to move the burger to the "Devoured Burgers" section</p>
				<button type="submit" id="add-burger">Add Burger</button>
			</form>

		</div>